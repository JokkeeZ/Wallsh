<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Wallsh.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Wallsh.Views"
        xmlns:models="clr-namespace:Wallsh.Models"
        MinHeight="500"
        MinWidth="500"
        Width="500"
        Height="500"
        mc:Ignorable="d" d:DesignWidth="500"
        x:Class="Wallsh.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Wallsh.ico"
        Title="{Binding AppTitle}">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="0,*,10" HorizontalAlignment="Center">
        <!-- NOTIFICATION -->
        <StackPanel Grid.Row="0" ZIndex="1">
            <NotificationCard NotificationType="{Binding NotificationType}"
                              IsVisible="{Binding IsNotificationVisible}"
                              Width="{Binding $parent.Width}"
                              Height="60">
                <StackPanel Margin="10 10 10 10" VerticalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" Text="{Binding NotificationText}" />
                </StackPanel>
            </NotificationCard>
        </StackPanel>

        <TabControl Grid.Row="1" Classes="TabControlContainer">

            <!-- GENERAL SETTINGS -->
            <TabItem Header="General">
                <Border Classes="TabContent">
                    <StackPanel Classes="Container">

                        <StackPanel Classes="Group">
                            <TextBlock Text="Time Between Changes" FontWeight="Bold" />

                            <StackPanel Classes="HorizontalChild">
                                <StackPanel Classes="Child" Width="146">
                                    <TextBlock Text="Hours(s):" />
                                    <NumericUpDown Classes="TimeSelector" Value="{Binding Hours}" Maximum="23" />
                                </StackPanel>

                                <StackPanel Classes="Child" Width="146">
                                    <TextBlock Text="Minute(s):" />
                                    <NumericUpDown Classes="TimeSelector" Value="{Binding Minutes}" Maximum="59" />
                                </StackPanel>

                                <StackPanel Classes="Child" Width="146">
                                    <TextBlock Text="Second(s):" />
                                    <NumericUpDown Classes="TimeSelector" Value="{Binding Seconds}" Maximum="59" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Classes="Group">
                            <TextBlock Text="Wallpapers folder" FontWeight="Bold" />
                            <StackPanel Classes="HorizontalChild">
                                <TextBox Classes="TextBox340"
                                         Watermark="Folder containing wallpapers"
                                         Name="FolderPathTextBox"
                                         Text="{Binding WallpapersFolder}" />
                                <Button Classes="Medium"
                                        Content="Browse"
                                        Click="BrowseFolderClick" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Classes="Group">
                            <TextBlock Text="Wallpaper adjustment" FontWeight="Bold" />
                            <StackPanel Classes="HorizontalChild">
                                <ComboBox Classes="ComboBox340"
                                          PlaceholderText="Select wallpaper adjustment"
                                          ItemsSource="{Binding Adjustments}"
                                          SelectedItem="{Binding WallpaperAdjustment}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Classes="Medium"
                                        Content="Save Settings"
                                        Command="{Binding SaveConfigurationCommand}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- SERVICES -->
                        <StackPanel Classes="Group">
                            <TextBlock Text="Select a service" FontWeight="Bold" />
                            <StackPanel>
                                <ToggleSwitch
                                    IsChecked="{Binding ChangerType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:WallpaperChangerType.Local}}"
                                    OffContent="Local disabled"
                                    OnContent="Local enabled" />
                                <ToggleSwitch
                                    IsChecked="{Binding ChangerType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:WallpaperChangerType.Wallhaven}}"
                                    OffContent="Wallhaven disabled"
                                    OnContent="Wallhaven enabled" />
                                <ToggleSwitch
                                    IsChecked="{Binding ChangerType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:WallpaperChangerType.Bing}}"
                                    OffContent="Bing disabled"
                                    OnContent="Bing enabled" />
                            </StackPanel>
                        </StackPanel>

                        <!-- INFO BUTTON -->
                        <RelativePanel ZIndex="1" Margin="0 25 5 0">
                            <Button Classes="InfoButton" RelativePanel.AlignRightWithPanel="True">
                                <PathIcon Width="15" Height="15" Data="{StaticResource InfoRegular}" />
                            </Button>
                        </RelativePanel>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- LOCAL SETTINGS -->
            <TabItem Header="Local">
                <Border Classes="TabContent">
                    <views:LocalView DataContext="{Binding LocalViewModel}" />
                </Border>
            </TabItem>

            <!-- WALLHAVEN SETTINGS -->
            <TabItem Header="Wallhaven">
                <Border Classes="TabContent">
                    <views:WallhavenView DataContext="{Binding WallhavenViewModel}" />
                </Border>
            </TabItem>

            <!-- BING SETTINGS -->
            <TabItem Header="Bing">
                <Border Classes="TabContent">
                    <views:BingView DataContext="{Binding BingViewModel}" />
                </Border>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
