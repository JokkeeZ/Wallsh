<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Wallsh.App"
             xmlns:local="using:Wallsh"
             xmlns:converters="clr-namespace:Wallsh.Converters"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

        <!-- Icons -->
        <StreamGeometry x:Key="InfoRegular">M14,2 C20.6274,2 26,7.37258 26,14 C26,20.6274 20.6274,26 14,26 C7.37258,26 2,20.6274 2,14 C2,7.37258 7.37258,2 14,2 Z M14,3.5 C8.20101,3.5 3.5,8.20101 3.5,14 C3.5,19.799 8.20101,24.5 14,24.5 C19.799,24.5 24.5,19.799 24.5,14 C24.5,8.20101 19.799,3.5 14,3.5 Z M14,11 C14.3796833,11 14.6934889,11.2821653 14.7431531,11.6482323 L14.75,11.75 L14.75,19.25 C14.75,19.6642 14.4142,20 14,20 C13.6203167,20 13.3065111,19.7178347 13.2568469,19.3517677 L13.25,19.25 L13.25,11.75 C13.25,11.3358 13.5858,11 14,11 Z M14,7 C14.5523,7 15,7.44772 15,8 C15,8.55228 14.5523,9 14,9 C13.4477,9 13,8.55228 13,8 C13,7.44772 13.4477,7 14,7 Z</StreamGeometry>
    </Application.Resources>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/Wallsh.ico"
                      ToolTipText="Wallsh - Wallpaper Slideshow Handler">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Wallsh" IsEnabled="False" Icon="/Assets/Wallsh.ico" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Show"
                                        Command="{x:Static local:App.ShowAppFromTray}" />
                        <NativeMenuItem Header="Open website"
                                        Command="{x:Static local:App.OpenWebsiteFromTray}" />
                        <NativeMenuItem Header="Open wallpaper folder"
                                        Command="{x:Static local:App.OpenWallpapersFolderFromTray}" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Quit"
                                        Command="{x:Static local:App.ExitAppFromTray}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <Style Selector="TextBox.TextBox340">
            <Setter Property="Width" Value="340" />
        </Style>

        <Style Selector="ComboBox.ComboBox340">
            <Setter Property="Width" Value="340" />
        </Style>

        <Style Selector="StackPanel.Container">
            <Setter Property="Spacing" Value="10" />
        </Style>

        <Style Selector="StackPanel.HorizontalContainer">
            <Setter Property="Spacing" Value="20" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style Selector="StackPanel.Child">
            <Setter Property="Spacing" Value="10" />
        </Style>

        <Style Selector="StackPanel.Group">
            <Setter Property="Spacing" Value="5" />
        </Style>

        <Style Selector="StackPanel.HorizontalGroup">
            <Setter Property="Spacing" Value="5" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style Selector="StackPanel.HorizontalChild">
            <Setter Property="Spacing" Value="10" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style Selector="Border.TabContent">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="CornerRadius" Value="3" />
        </Style>

        <Style Selector="TabControl.TabControlContainer">
            <Setter Property="Width" Value="500" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <Style Selector="Button.Medium">
            <Setter Property="Width" Value="110" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style Selector="Button.InfoButton">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="Background" Value="MediumPurple" />
        </Style>

        <Style Selector="NumericUpDown.TimeSelector">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="MinWidth" Value="110" />
            <Setter Property="Minimum" Value="0" />
            <Setter Property="FormatString" Value="0" />
            <Setter Property="Increment" Value="1" />
            <Setter Property="Watermark" Value="0" />
        </Style>
    </Application.Styles>
</Application>
